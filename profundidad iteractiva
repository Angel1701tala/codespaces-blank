import java.util.Scanner;

public class PanqueI {
   public static void main(String[] args) {
      Scanner input = new Scanner(System.in);
      System.out.print("Ingrese el número de panques: ");
      int numPanques = input.nextInt();
      double[] profundidades = new double[numPanques];
      
      for (int i = 0; i < numPanques; i++) {
         System.out.print("Ingrese la profundidad del panque #" + (i+1) + ": ");
         profundidades[i] = input.nextDouble();
      }
      
      double maxProfundidad = profundidades[0];
      int numPanqueMaxProfundidad = 1;
      int contador = 0;
      for (int i = 1; i < numPanques; i++) {
         contador++;
         if (profundidades[i] > maxProfundidad) {
            maxProfundidad = profundidades[i];
            numPanqueMaxProfundidad = i+1;
         }
      }
      
      System.out.println("El panque #" + numPanqueMaxProfundidad + " tiene la mayor profundidad de " + maxProfundidad + " pulgadas.");
      System.out.println("El bucle se ejecutó " + contador + " veces.");
   }
}
